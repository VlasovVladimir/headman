<Window x:Class="headman.Forms.MapChoise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Я хочу сыграть с тобой в игру. Выбирай." Height="400" Width="600" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="275*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="MapsList" HorizontalAlignment="Left" Height="350" Margin="25,10,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="MapsList_SelectionChanged"/>
        <Button x:Name="NewGame" Content="Новая игра" HorizontalAlignment="Left" Height="41" Margin="307,319,0,0" VerticalAlignment="Top" Width="101" Click="NewGame_Click"/>
        <Button x:Name="Cancel" Content="Назад" HorizontalAlignment="Left" Height="41" Margin="461,318,0,0" VerticalAlignment="Top" Width="101" Click="Cancel_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="description" HorizontalAlignment="Left" Height="280" Margin="307,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" IsEnabled="False" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
