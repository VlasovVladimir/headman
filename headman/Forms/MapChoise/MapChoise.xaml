<Window x:Class="headman.Forms.MapChoise.MapChoise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:headman.Forms.MapChoise"
        mc:Ignorable="d"
        Title="Я хочу сыграть с тобой в игру. Выбирай." Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="MapsList" HorizontalAlignment="Left" Height="350" Margin="25,10,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="MapsList_SelectionChanged"/>
        <Button x:Name="NewGame" Content="Новая игра" HorizontalAlignment="Left" Height="41" Margin="307,319,0,0" VerticalAlignment="Top" Width="101" Click="NewGame_Click"/>
        <Button x:Name="Cancel" Content="Назад" HorizontalAlignment="Left" Height="41" Margin="461,318,0,0" VerticalAlignment="Top" Width="101" Click="Cancel_Click"/>
        <TextBox x:Name="description" HorizontalAlignment="Left" Height="280" Margin="307,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="255"/>

    </Grid>
</Window>
