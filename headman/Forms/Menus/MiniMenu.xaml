<Window x:Class="headman.Forms.Menus.MiniMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Меню" Height="250" Width="192.537">
    <Window.Background>
        <ImageBrush ImageSource="/headman;component/Images/village.jpg" Stretch="UniformToFill" TileMode="None"/>
    </Window.Background>
    <Grid>
        <Button x:Name="Save" Content="Сохранить" HorizontalAlignment="Left" Height="37" Margin="9,10,0,0" VerticalAlignment="Top" Width="166" FontSize="20"/>
        <Button x:Name="Help" Content="Справка" HorizontalAlignment="Left" Height="37" Margin="10,92,0,0" VerticalAlignment="Top" Width="166" FontSize="20" Click="Help_Click"/>
        <Button x:Name="ToMainMenu" Content="В главное меню" HorizontalAlignment="Left" Height="37" Margin="10,172,0,0" VerticalAlignment="Top" Width="166" FontSize="20" Click="ToMainMenu_Click"/>

    </Grid>
</Window>
