<Window x:Class="headman.Forms.MiniMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Меню" Height="220" Width="197" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="/headman;component/Images/village.jpg" Stretch="UniformToFill" TileMode="None"/>
    </Window.Background>
    <Grid>
        <Button x:Name="Save" Content="Сохранить" HorizontalAlignment="Left" Height="37" Margin="9,10,0,0" VerticalAlignment="Top" Width="166" FontSize="20" Click="Save_Click"/>
        <Button x:Name="Help" Content="Справка" HorizontalAlignment="Left" Height="37" Margin="9,61,0,0" VerticalAlignment="Top" Width="166" FontSize="20" Click="Help_Click"/>
        <Button x:Name="ToMainMenu" Content="В главное меню" HorizontalAlignment="Left" Height="37" Margin="9,112,0,0" VerticalAlignment="Top" Width="166" FontSize="20" Click="ToMainMenu_Click"/>
        <Button x:Name="BackToGame" Content="Назад в игру" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="9,165,0,0" Height="37" FontSize="20" Click="BackToGame_Click" />

    </Grid>
</Window>
