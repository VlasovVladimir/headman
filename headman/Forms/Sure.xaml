        <TextBlock HorizontalAlignment="Left" Height="43" Margin="10,20,0,0" TextWrapping="Wrap" Text="Вы уверены, что хотите выйти?" VerticalAlignment="Top" Width="302" FontSize="20"/>
        <Button x:Name="Yes" Content="Да" HorizontalAlignment="Left" Height="19" Margin="10,68,0,0" VerticalAlignment="Top" Width="80" Click="Yes_Click"/>
        <Button x:Name="No" Content="Нет" HorizontalAlignment="Left" Height="19" Margin="212,68,0,0" VerticalAlignment="Top" Width="80" Click="No_Click"/>

    </Grid>
</Window>
