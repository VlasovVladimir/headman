<Window x:Name="Main_Menu" x:Class="headman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800" ResizeMode="NoResize">
    <Grid Margin="250,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Button x:Name="NewGame" Content="Новая игра" HorizontalAlignment="Left" Height="56" Margin="10,168,0,0" VerticalAlignment="Top" Width="276" FontSize="20"/>
        <Button x:Name="Upload" Content="Загрузка" HorizontalAlignment="Left" Height="56" Margin="12,253,0,0" VerticalAlignment="Top" Width="276" FontSize="20"/>
        <Button x:Name="Help" Content="Справка" HorizontalAlignment="Left" Height="56" Margin="10,338,0,0" VerticalAlignment="Top" Width="276" FontSize="20"/>
        <Button x:Name="Exit" Content="Выйти" HorizontalAlignment="Left" Height="56" Margin="259,505,-241,0" VerticalAlignment="Top" Width="276" FontSize="20" Click="Exit_Click"/>
    </Grid>
</Window>
